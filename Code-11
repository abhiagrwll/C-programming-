//binary to decimal
#include <stdio.h>
int main()
{
   int num,nsave,rem,j=1,d,dec=0;
   printf("enter number");
   scanf("%d",&num);
   nsave=num;
  while (num>0)
   {
       rem=num%10;
       d=j*rem;
       dec=dec+d;
       j*=2;
       num/=10;
  }
   printf("decimal value of %d is %d",nsave,dec);
   return 0;
}
Multiply two positive numbers without using * operator
#include <stdio.h>
int main()
{
    int num1,num2,i,result=0;
	printf("enter two no.s to be multiplied");
	scanf("%d%d",&num1,&num2);
	for (i=1;i<=num2;i++)
		result+=num1;
	printf("product of %d and %d is:%d",num1,num2,result);
return 0;
}
